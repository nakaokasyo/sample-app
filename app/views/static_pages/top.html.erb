<% provide(:title, "Top") %>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <h1 class="top-left">TaskApp</h1>
      <p>TaskAppは簡易ToDo管理ツールです。</p><br>
      <p>↓↓初めてのご利用↓↓</p>
        <% if logged_in?%>
        <p><%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" ,disabled: true %></p>
          
        <% else %>
          <p><%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" %></p>
        <% end %>
      </div>
      
      <div class="col-md-4 col-md-offset-2">
        <h1 class="form">ログイン</h1>
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
  
          <%= f.label :email, "メールアドレス", class: "label-login" %>
          <%= f.email_field :email, class: 'form-control' %>
    
          <%= f.label :password, "パスワード", class: "label-login" %>
          <%= f.password_field :password, class: 'form-control' %>
    
          <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
            <%= f.check_box :remember_me, id: "remember-me" %>
            <span>ログイン情報を記憶する</span>
        <% end %>
        <% if logged_in? %>
          <%= f.submit "ログイン状態です", class: "btn btn-primary btn-block btn-login",disabled: true %>
        <% else %>
          <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
        <% end %>
      <% end %>
    </div>
  </div>
  
  
  <center>
    
    
  </center>
</div>
